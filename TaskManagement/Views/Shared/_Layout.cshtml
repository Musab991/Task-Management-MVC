<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskManagement</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- DataTables Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.5/css/dataTables.bootstrap5.min.css" />

    <!-- DataTables Extensions CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.3.5/css/buttons.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/3.0.7/css/responsive.bootstrap5.min.css" />

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TaskManagement.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="d-flex">
        @Html.Partial("_Sidebar")
        <main role="main" class="flex-fill p-3">
            @RenderBody()
        </main>
    </div>

    <!-- ---------------- SCRIPT ORDER START ---------------- -->
    <!-- 1. jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- 2. DataTables Core -->
    <script src="https://cdn.datatables.net/2.3.5/js/jquery.dataTables.min.js"></script>

    <!-- 3. DataTables Bootstrap 5 -->
    @* <script src="https://cdn.datatables.net/2.3.5/js/dataTables.bootstrap5.min.js"></script> *@

    <!-- (optional) extensions later -->
    <!-- 7. Your custom JS (ALWAYS LAST) -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/components/sidebar.js"></script>

    <!-- View-specific scripts -->
    @await RenderSectionAsync("Scripts", required: false)

    <!-- ---------------- SCRIPT ORDER END ---------------- -->

</body>
</html>
